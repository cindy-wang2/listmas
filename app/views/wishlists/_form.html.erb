<% was_validated = wishlist.errors.any? %>

<%= form_with(model: wishlist, local: true, novalidate: true, class: "mb-3") do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <% recipient_class = "form-control" %>
    <% recipient_was_invalid = wishlist.errors.include?(:recipient) %>

    <% if was_validated %>
      <% if recipient_was_invalid %>
        <% recipient_class << " is-invalid" %>
      <% else %>
        <% recipient_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :recipient %>
    <%= f.text_field :recipient, class: recipient_class, placeholder: "Enter recipient" %>
    <% if recipient_was_invalid %>
      <% wishlist.errors.full_messages_for(:recipient).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
