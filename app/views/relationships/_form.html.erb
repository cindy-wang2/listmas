<% was_validated = relationship.errors.any? %>

<%= form_with(model: relationship, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% your_giftgiver_class = "form-control" %>
    <% your_giftgiver_was_invalid = relationship.errors.include?(:your_giftgiver) %>

    <% if was_validated %>
      <% if your_giftgiver_was_invalid %>
        <% your_giftgiver_class << " is-invalid" %>
      <% else %>
        <% your_giftgiver_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :your_giftgivers %>
    <%= f.number_field :your_giftgivers, class: your_giftgiver_class, placeholder: "Enter your giftgiver" %>
    <% if your_giftgiver_was_invalid %>
      <% relationship.errors.full_messages_for(:your_giftgiver).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% your_recipient_class = "form-control" %>
    <% your_recipient_was_invalid = relationship.errors.include?(:your_recipient) %>

    <% if was_validated %>
      <% if your_recipient_was_invalid %>
        <% your_recipient_class << " is-invalid" %>
      <% else %>
        <% your_recipient_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :your_recipients %>
    <%= f.number_field :your_recipients, class: your_recipient_class, placeholder: "Enter your recipient" %>
    <% if your_recipient_was_invalid %>
      <% relationship.errors.full_messages_for(:your_recipient).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% relationshiptype_class = "form-control" %>
    <% relationshiptype_was_invalid = relationship.errors.include?(:relationshiptype) %>

    <% if was_validated %>
      <% if relationshiptype_was_invalid %>
        <% relationshiptype_class << " is-invalid" %>
      <% else %>
        <% relationshiptype_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :relationshiptype %>
    <%= f.text_field :relationshiptype, class: relationshiptype_class, placeholder: "Enter relationshiptype" %>
    <% if relationshiptype_was_invalid %>
      <% relationship.errors.full_messages_for(:relationshiptype).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
